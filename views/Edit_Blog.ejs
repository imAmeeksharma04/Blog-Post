<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Document</title>
    <link rel="stylesheet" href="/CSS/index.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="d-flex flex-column vh-100">
    <%- include("partials/navbar.ejs")  %>
    <div class="container">
        <h1 class="text-color">Edit blog post</h1>
        <form action="/update/<%= postIndex %>" method="POST">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="heading" name="heading" value="<%= post.heading %>" required>
                <label for="heading">Heading</label>
            </div>
            <div class="form-floating mb-3">
                <textarea class="form-control" id="content" name="content" required><%= post.content %></textarea>
                <label for="content">Content</label>
            </div>
            <button type="submit" class="btn btn-success">Update Post</button>
        </form>
    </div>
    <%- include("partials/footer.ejs")  %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>