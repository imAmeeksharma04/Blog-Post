<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Document</title>
    <link rel="stylesheet" href="/CSS/index.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="d-flex flex-column vh-100">
    <%- include("partials/navbar.ejs")  %>
    <div class="container">
        <h1 class="text-color">Create a blog</h1>
        <form action="/submit" method="post">
            <div class="form-floating">
                <textarea class="form-control" placeholder="Enter heading" id="Heading" name="heading"></textarea>
                <label for="Heading">Heading</label>
            </div>
            <br>
            <div class="form-floating">
                <textarea class="form-control" placeholder="Write your content here" id="Content" name="content"></textarea>
                <label for="Content">Write your content here...</label>
            </div>
            <br>
            <div class="d-grid col-6 mx-auto">
                <button type="submit" class="btn btn-outline-light btn-lg text-color">Create a post</button>
            </div>
        </form>
    </div>
    <%- include("partials/footer.ejs")  %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>